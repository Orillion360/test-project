{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "module": "commonjs",
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
    },
    "include": [
        "./src/**/*",
        "./types/**/*"
    ]
}